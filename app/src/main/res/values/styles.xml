<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorTuristandoBranco</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorTuristandoBranco</item>
        <item name="colorPrimaryDark">@color/colorTuristandoBranco</item>
        <item name="colorAccent">@color/colorTuristandoBranco</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarDetalhesEmpresaAzul">
        <item name="colorPrimary">@color/colorTuristandoAzul</item>
        <item name="colorPrimaryDark">@color/colorTuristandoAzul</item>
        <item name="colorAccent">@color/colorTuristandoAzul</item>
        <item name="colorControlNormal">@color/colorTuristandoAzul</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarDetalhesEmpresaVermelho">
        <item name="colorPrimary">@color/colorTuristandoRed</item>
        <item name="colorPrimaryDark">@color/colorTuristandoRed</item>
        <item name="colorAccent">@color/colorTuristandoRed</item>
        <item name="colorControlNormal">@color/colorTuristandoRed</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarDetalhesTurismoRoxo">
        <item name="colorPrimary">@color/colorTuristandoRoxo</item>
        <item name="colorPrimaryDark">@color/colorTuristandoRoxo</item>
        <item name="colorAccent">@color/colorTuristandoRoxo</item>
        <item name="colorControlNormal">@color/colorTuristandoRoxo</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="AppTheme.NoActionBarEventosLaranja">
        <item name="colorPrimary">@color/colorTuristandoLaranja</item>
        <item name="colorPrimaryDark">@color/colorTuristandoLaranja</item>
        <item name="colorAccent">@color/colorTuristandoLaranja</item>
        <item name="colorControlNormal">@color/colorTuristandoBranco</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ComoChegar" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/colorTuristandoVerde</item>
        <item name="colorPrimaryDark">@color/colorTuristandoVerde</item>
        <item name="colorAccent">@color/colorTuristandoVerde</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBarListarEmpresasBlack">
        <item name="colorPrimary">@color/colorTuristandoAzul</item>
        <item name="colorPrimaryDark">@color/colorTuristandoAzul</item>
        <item name="colorAccent">@color/colorTuristandoAzul</item>
        <item name="colorControlNormal">@color/colorTuristandoBranco</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarListarRestaurante">
        <item name="colorPrimary">@color/colorTuristandoRed</item>
        <item name="colorPrimaryDark">@color/colorTuristandoRed</item>
        <item name="colorAccent">@color/colorTuristandoRed</item>
        <item name="colorControlNormal">@color/colorTuristandoBranco</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/colorTuristandoAzul</item>
        <item name="background">@color/colorTuristandoAzul</item>

    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorTuristandoBranco</item>
    </style>


    <style name="CustomActionBarThemeTurismoIbitinga" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBarTurismoIbitinga</item>
        <item name="actionBarStyle">@style/MyActionBarTurismoIbitinga</item>
        <item name="colorPrimary">@color/colorTuristandoRoxo</item>
        <item name="colorPrimaryDark">@color/colorTuristandoRoxo</item>
        <item name="colorAccent">@color/colorTuristandoRoxo</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyActionBarTurismoIbitinga" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <item name="colorPrimary">@color/colorTuristandoRoxo</item>
        <item name="colorPrimaryDark">@color/colorTuristandoRoxo</item>
        <item name="colorAccent">@color/colorTuristandoRoxo</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@color/colorTuristandoRoxo</item>
        <item name="background">@color/colorTuristandoRoxo</item>
    </style>


    <style name="AppTheme.ActionBarBlck" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TuristandoIbitinga" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
