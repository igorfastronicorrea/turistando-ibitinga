--TRAZER POR ORDEM DE MENOR NIVEL PARA MAIOR | Criando view \\DEPRECIADO
CREATE view selectEmpresaNiveis as

SELECT 'A' AS ORDENA, * FROM EMPRESA WHERE TOP_5 = 'S' 
UNION ALL 
SELECT 'B' AS ORDENA, * FROM EMPRESA WHERE TOP_10 = 'S' 
UNION ALL 
SELECT 'C' AS ORDENA, * FROM EMPRESA WHERE TOP_15 = 'S' 
UNION ALL 
SELECT 'D' AS ORDENA, * FROM EMPRESA WHERE TOP_20 = 'S'
UNION ALL 
SELECT 'E' AS ORDENA, * FROM EMPRESA WHERE TOP_25 = 'S'
UNION ALL 
SELECT 'F' AS ORDENA, * FROM EMPRESA WHERE TOP_30 = 'S'
UNION ALL 
SELECT 'G' AS ORDENA, * FROM EMPRESA WHERE TOP_30_MAIS = 'S'
UNION ALL 
SELECT 'H' AS ORDENA, * FROM EMPRESA WHERE GRATIS = 'S'




--SELECT da view
SELECT * FROM viewSelectEmpresaListagem 
ORDER BY ORDENA, ID



--CRIAR VIEW DA LISTAGEM
CREATE view viewSelectEmpresaListagem as

SELECT 'A' AS ORDENA, ID,
    NOME,
    FOTO_CAPA_OTIMIZADO ,
    ENDERECO
FROM EMPRESA WHERE TOP_5 = 'S' 


UNION ALL 



SELECT 'B' AS ORDENA, ID,
  NOME,
    FOTO_CAPA_OTIMIZADO ,
    ENDERECO
 FROM EMPRESA WHERE TOP_10 = 'S' 


UNION ALL


SELECT 'C' AS ORDENA, ID,
   NOME,
    FOTO_CAPA_OTIMIZADO ,
    ENDERECO
 FROM EMPRESA WHERE TOP_15 = 'S' 


UNION ALL


SELECT 'D' AS ORDENA, ID,
   NOME,
    FOTO_CAPA_OTIMIZADO ,
    ENDERECO
FROM EMPRESA WHERE TOP_20 = 'S'


UNION ALL


SELECT 'E' AS ORDENA, ID,
  NOME,
    FOTO_CAPA_OTIMIZADO ,
    ENDERECO 
 FROM EMPRESA WHERE TOP_25 = 'S'


UNION ALL 


SELECT 'F' AS ORDENA, ID,
   NOME,
    FOTO_CAPA_OTIMIZADO ,
    ENDERECO 
FROM EMPRESA WHERE TOP_30 = 'S'


UNION ALL 


SELECT 'G' AS ORDENA, ID,
   NOME,
    FOTO_CAPA_OTIMIZADO ,
    ENDERECO 
FROM EMPRESA WHERE TOP_30_MAIS = 'S'


UNION ALL 


SELECT 'H' AS ORDENA, ID,
    NOME,
    FOTO_CAPA_OTIMIZADO ,
    ENDERECO 
 FROM EMPRESA WHERE GRATIS = 'S'

