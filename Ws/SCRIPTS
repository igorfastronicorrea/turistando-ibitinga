CREATE TABLE EMPRESA(
	ID INT AUTO_INCREMENT NOT NULL,
    NOME VARCHAR(100),
    DESCRICAO VARCHAR(9999),
    FOTO_CAPA VARCHAR(200),
    FOTO_CAPA_OTIMIZADO VARCHAR(200),
    FOTO_1 VARCHAR(200),
    FOTO_2 VARCHAR(200),
    FOTO_3 VARCHAR(200),
    FOTO_4 VARCHAR(200),
    FOTO_5 VARCHAR(200),
    FOTO_6 VARCHAR(200),
    FOTO_7 VARCHAR(200),
    FOTO_8 VARCHAR(200),
    FOTO_9 VARCHAR(200),
    FOTO_10 VARCHAR(200),
    FOTO_11 VARCHAR(200),
    FOTO_12 VARCHAR(200),
    FOTO_13 VARCHAR(200),
    FOTO_14 VARCHAR(200),
    FOTO_15 VARCHAR(200),
    FOTO_16 VARCHAR(200),
    FOTO_17 VARCHAR(200),
    FOTO_18 VARCHAR(200),
    FOTO_19 VARCHAR(200),
	FOTO_20 VARCHAR(200),
    WHATSAPP VARCHAR(30),
    FACEBOOK VARCHAR(100),
    INSTAGRAN VARCHAR(100),
    SITE VARCHAR(100),
    TEL_1 VARCHAR(30),
    TEL_2 VARCHAR(30),
    HORARIO VARCHAR(200),
    ENDERECO VARCHAR(500),
    TOP_5 VARCHAR(10),
    TOP_10 VARCHAR(10),
    TOP_15 VARCHAR(10),
	TOP_20 VARCHAR(10),
    TOP_25 VARCHAR(10),
    TOP_30 VARCHAR(10),
    TOP_30_MAIS VARCHAR(10),
    GRATIS VARCHAR(10),
)




